{
  "name": "nix-upstream-check",
  "displayName": "Nix Upstream Check",
  "description": "Find all upstream references to a C# function and display the call tree.",
  "version": "0.1.0",
  "publisher": "your-publisher-id",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onCommand:nixUpstreamCheck.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nix Upstream Check",
      "properties": {
        "nixUpstreamCheck.enableFileScanFallback": {
          "type": "boolean",
          "default": false,
          "description": "Enable slow file scan when language server returns no results. Disable to speed up searches for methods without references (like tests)."
        }
      }
    },
    "commands": [
      {
        "command": "nixUpstreamCheck.start",
        "title": "Nix Upstream Check"
      },
      {
        "command": "nixUpstreamCheck.exhaustiveSearch",
        "title": "Exhaustive Search (with file scan)"
      },
      {
        "command": "nixUpstreamCheck.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "nixUpstreamCheck.clearTree",
        "title": "Clear Tree",
        "icon": "$(clear-all)"
      },
      {
        "command": "nixUpstreamCheck.exportJson",
        "title": "Export as JSON",
        "icon": "$(save)"
      },
      {
        "command": "nixUpstreamCheck.exportMarkdown",
        "title": "Export as Markdown",
        "icon": "$(markdown)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nixUpstreamCheck.start",
          "when": "editorLangId == csharp",
          "group": "navigation@100"
        }
      ],
      "view/item/context": [
        {
          "command": "nixUpstreamCheck.exhaustiveSearch",
          "when": "view == nixUpstreamCheckTree && viewItem == nixUpstreamNode",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "nixUpstreamCheck.expandAll",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation"
        },
        {
          "command": "nixUpstreamCheck.exportJson",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation"
        },
        {
          "command": "nixUpstreamCheck.exportMarkdown",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation"
        },
        {
          "command": "nixUpstreamCheck.clearTree",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nixUpstreamCheckSidebar",
          "title": "Nix Upstream",
          "icon": "media/nix.svg"
        }
      ]
    },
    "views": {
      "nixUpstreamCheckSidebar": [
        {
          "id": "nixUpstreamCheckTree",
          "name": "Upstream Call Tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.2",
    "tslint": "^6.1.3",
    "typescript": "^4.8.0"
  }
}
