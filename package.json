{
  "name": "nix-upstream-check",
  "displayName": "Nix Upstream Check",
  "description": "Find all upstream references to a C# function and display the call tree.",
  "version": "0.1.3",
  "publisher": "NigelWGMajor",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NigelWGMajor/nix-upstream-check"
  },
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nix Upstream Check",
      "properties": {
        "nixUpstreamCheck.enableFileScanFallback": {
          "type": "boolean",
          "default": false,
          "description": "Enable slow file scan when language server returns no results. Disable to speed up searches for methods without references (like tests)."
        },
        "nixUpstreamCheck.enablePruneDebugOutput": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed debug output when pruning unchecked items from the tree."
        }
      }
    },
    "commands": [
      {
        "command": "nixUpstreamCheck.start",
        "title": "Check Upstream"
      },
      {
        "command": "nixUpstreamCheck.exhaustiveSearch",
        "title": "Exhaustive Search (with file scan)"
      },
      {
        "command": "nixUpstreamCheck.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "nixUpstreamCheck.clearTree",
        "title": "Clear Tree",
        "icon": "$(clear-all)"
      },
      {
        "command": "nixUpstreamCheck.exportJson",
        "title": "Save Upstream JSON",
        "icon": "$(save)"
      },
      {
        "command": "nixUpstreamCheck.exportMarkdown",
        "title": "Copy as Markdown",
        "icon": "$(clippy)"
      },
      {
        "command": "nixUpstreamCheck.pruneUnchecked",
        "title": "Prune Unchecked Items",
        "icon": "$(filter)"
      },
      {
        "command": "nixUpstreamCheck.searchUpstreamFromReference",
        "title": "Search Upstream from Here"
      },
      {
        "command": "nixUpstreamCheck.importJson",
        "title": "Load Upstream JSON",
        "icon": "$(folder-opened)"
      },
      {
        "command": "nixUpstreamCheck.addCurrentLine",
        "title": "Add Current Line",
        "icon": "$(add)"
      },
      {
        "command": "nixUpstreamCheck.removeNode",
        "title": "Remove from Tree",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nixUpstreamCheck.start",
          "when": "editorLangId == csharp",
          "group": "navigation@100"
        }
      ],
      "view/item/context": [
        {
          "command": "nixUpstreamCheck.removeNode",
          "when": "view == nixUpstreamCheckTree && (viewItem == nixUpstreamNode || viewItem == nixUpstreamReference)",
          "group": "1_actions@1"
        },
        {
          "command": "nixUpstreamCheck.exhaustiveSearch",
          "when": "view == nixUpstreamCheckTree && (viewItem == nixUpstreamNode || viewItem == nixUpstreamReference)",
          "group": "1_actions@2"
        },
        {
          "command": "nixUpstreamCheck.searchUpstreamFromReference",
          "when": "view == nixUpstreamCheckTree && (viewItem == nixUpstreamNode || viewItem == nixUpstreamReference)",
          "group": "1_actions@3"
        }
      ],
      "view/title": [
        {
          "command": "nixUpstreamCheck.addCurrentLine",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@1"
        },
        {
          "command": "nixUpstreamCheck.expandAll",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@2"
        },
        {
          "command": "nixUpstreamCheck.importJson",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@3"
        },
        {
          "command": "nixUpstreamCheck.exportJson",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@4"
        },
        {
          "command": "nixUpstreamCheck.exportMarkdown",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@5"
        },
        {
          "command": "nixUpstreamCheck.pruneUnchecked",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@6"
        },
        {
          "command": "nixUpstreamCheck.clearTree",
          "when": "view == nixUpstreamCheckTree",
          "group": "navigation@7"
        }
      ],
      "explorer/context": [
        {
          "command": "nixUpstreamCheck.importJson",
          "when": "resourceExtname == .json && resourceFilename =~ /\\.upstream\\.json$/",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nixUpstreamCheckSidebar",
          "title": "Upstream",
          "icon": "media/tree.svg"
        }
      ]
    },
    "views": {
      "nixUpstreamCheckSidebar": [
        {
          "id": "nixUpstreamCheckTree",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^3.6.2",
    "tslint": "^6.1.3",
    "typescript": "^4.8.0"
  }
}
